<Window x:Class="Products_management.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Products_management"
        mc:Ignorable="d"
        Title="Products Manager" Height="500" Width="800"
        Background="#FF0F1113"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="700"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Master" Grid.Row="1" Grid.Column="1" Foreground="White" FontSize="28" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin=" 0 0 550 0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="ID:" Foreground="White" FontSize="16" Width="150" Margin=" 0 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Border Width="50" Height="30" BorderThickness="5" BorderBrush="#FF793B3B" Margin=" -100 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBox x:Name="ProductidTextBox" />
            </Border>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
            <StackPanel Orientation="Horizontal" Margin="0 10" VerticalAlignment="Top" HorizontalAlignment="Center">
                <Label Content="Product Name:" Foreground="White" FontSize="16" Width="150" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <Border Width="200" Height="30" BorderThickness="5" BorderBrush="#FF793B3B" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBox x:Name="ProductNameTextBox" />
                </Border>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 10" VerticalAlignment="Top" HorizontalAlignment="Center">
                <Label Content="Descriptin:" Foreground="White" FontSize="16" Width="150" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <Border Width="200" Height="30" BorderThickness="5" BorderBrush="#FF793B3B" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBox x:Name="ProductDescTextBox" />
                </Border>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">

            <StackPanel Orientation="Horizontal" Margin="0 10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Label Content="Price:" Foreground="White" FontSize="16" Width="150" Margin=" 0 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <Border Width="50" Height="30" BorderThickness="5" BorderBrush="#FF793B3B" Margin=" 0 0 200 0" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBox x:Name="ProductPriceTextBox" />
                </Border>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Label Content="Quantity" Foreground="White" FontSize="16" Width="150" Margin=" 95 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <Border Width="50" Height="30" BorderThickness="5" BorderBrush="#FF793B3B"  VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBox x:Name="ProductQuantityTextBox" />
                </Border>
            </StackPanel>
        </StackPanel>


        <StackPanel Orientation="Horizontal" Margin="100 0 0 10" Grid.Row="3"  Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Left">
            <Border Width="150" Height="30" BorderThickness="5" BorderBrush="White"  VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button x:Name="Add" Content="Add" Click="Add_Click"/>
            </Border>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0 10" Grid.Row="3"  Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Border Width="150" Height="30" BorderThickness="5" BorderBrush="White"  VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button x:Name="Edit" Content="Edit" Height="20" VerticalAlignment="Top" Click="Edit_Click"/>
            </Border>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0 0 100 10" Grid.Row="3"  Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Border Width="150" Height="30" BorderThickness="5" BorderBrush="White"  VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button x:Name="Delete" Content="Delete" Click="Delete_Click"/>
            </Border>
        </StackPanel>

        <DataGrid x:Name="ProductsDataGrid" Width="700" Height="200" Grid.Column="1" FontSize="16" FontWeight="DemiBold" Foreground="Red" Background="#FF2D0909" Grid.Row="5" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Product ID" Width="100" Binding="{Binding Productid}"/>
                <DataGridTextColumn Header="Product Name" Width="195" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Description" Width="230" Binding="{Binding Decription}"/>
                <DataGridTextColumn Header="Price" Width="75" Binding="{Binding Price}"/>
                <DataGridTextColumn Header="Quantity" Width="75" Binding="{Binding InStockQuantity}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
