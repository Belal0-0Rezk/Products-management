<Window x:Class="Products_management.Customer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Products_management"
        mc:Ignorable="d"
        Title="Customer" Height="450" Width="800"
        Background="#FF0F1113"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="700"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="220"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="60"/>

        </Grid.RowDefinitions>
        <Label Content="Customer" Grid.Row="1" Grid.Column="1" Foreground="White" FontSize="28" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>



        <StackPanel Orientation="Horizontal" Margin="10"  Grid.Row="1"  Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
            <Border Width="100" Height="30" BorderThickness="5" BorderBrush="White"  VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button x:Name="ViewtoCart" Content="View Cart" Click="ViewtoCart_Click_1"/>
            </Border>
        </StackPanel>

        <DataGrid x:Name="ProductsDataGridcart" Width="583" Height="200" Grid.Column="1" FontSize="16" FontWeight="DemiBold" Foreground="Red" Background="#FF2D0909" Grid.Row="3" Margin="50 0 50 0" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Product Name" Width="195" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Description" Width="230" Binding="{Binding Decription}"/>
                <DataGridTextColumn Header="Price" Width="75" Binding="{Binding Price}"/>
                <DataGridTextColumn Header="Available" Width="75" Binding="{Binding InStockQuantity}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" Margin="210 0 0 0"  Grid.Row="5"  Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <Border Width="150" Height="30" BorderThickness="5" BorderBrush="White"  VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button x:Name="Add" Content="Add" Click="Add_Click"/>
            </Border>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="-200 0 0 0"  Grid.Row="5"  Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Amount" FontSize="21" FontWeight="DemiBold" Foreground="White"/>
            <Border Width="50" Height="30" BorderThickness="5" BorderBrush="White"  VerticalAlignment="Center" HorizontalAlignment="Center" >
                <TextBox x:Name="Amount"/>
            </Border>
        </StackPanel> 
        <TextBlock x:Name="errorselect" Text="" Foreground="Red" FontStyle="Italic" FontWeight="Bold" FontSize="18" Grid.Row="4"  Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center"/> 
    </Grid>

</Window>
