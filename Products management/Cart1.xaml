<Window x:Class="Products_management.Cart1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Products_management"
        mc:Ignorable="d"
        Title="Cart" Height="450" Width="800"        
        Background="#FF0F1113"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="700"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="220"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="60"/>

        </Grid.RowDefinitions>
        <Label Content="Cart" Grid.Row="1" Grid.Column="1" Foreground="White" FontSize="28" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin=" 0 0 550 0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Cart For:" Foreground="White"  Width="150" Margin=" 0 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock x:Name="UsernameCart" Text="" FontSize="18" Margin=" -70 0 20 0" Foreground="Red" FontWeight="Bold"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="10"  Grid.Row="1"  Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
            <Border Width="120" Height="30" BorderThickness="5" BorderBrush="White"  VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button x:Name="BacktoProducts" Content="Back to Products" Click="BacktoProducts_Click" Height="20" VerticalAlignment="Top"/>
            </Border>
        </StackPanel>

        <DataGrid x:Name="ProductsDataGridcart" Width="353" Height="200" Grid.Column="1" FontSize="16" FontWeight="DemiBold" Foreground="Red" Background="#FF2D0909" Grid.Row="3" Margin="50 0 50 0" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Product Name" Width="195" Binding="{Binding ProductName}"/>
                <DataGridTextColumn Header="Price" Width="75" Binding="{Binding Pricee}"/>
                <DataGridTextColumn Header="Quantity" Width="80" Binding="{Binding Quanttity}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" Margin="150 0 0 0"  Grid.Row="5"  Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <Border Width="150" Height="30" BorderThickness="5" BorderBrush="White"  VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button x:Name="remove" Content="Remove" Click="remove_Click" Height="20" VerticalAlignment="Top"/>
            </Border>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="480 0 0 0"  Grid.Row="5"  Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <Border Width="150" Height="30" BorderThickness="5" BorderBrush="White"  VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button x:Name="checkout" Content="Check Out" Click="checkout_Click" Height="20" VerticalAlignment="Top"/>
            </Border>
        </StackPanel>

    </Grid>
</Window>
