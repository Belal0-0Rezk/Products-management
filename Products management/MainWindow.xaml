<Window x:Class="Products_management.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Products_management"
        mc:Ignorable="d"
        Title="LoginPage" Height="450" Width="800"
                Background="#FF0F1113"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/wallpaper-TechnoTour (9).jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="380"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="350"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="PassErrorDB" Grid.Column="1" Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Center" Text="" Foreground="Red" FontSize="16"/>
        <Border Background="AliceBlue" Grid.Column="1" Grid.Row="1" Padding="10" BorderThickness="2" BorderBrush="White" CornerRadius="18">
            <Grid>
                <Grid.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2"/>
                </Grid.Effect>

                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Content="Login" FontSize="40" FontWeight="Bold" Foreground="#FF290A0A"
                       HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1"/>
                <StackPanel  Orientation="Horizontal" Grid.Row="3" Margin="10">
                    <Label Content="Email"  FontWeight="DemiBold" FontSize="18"
                           VerticalAlignment="Center"/>
                    <TextBox x:Name="EmailTextBox" Width="150" Height="30" Margin="120,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="5" Margin="10">
                    <Label Content="Password" FontWeight="DemiBold" FontSize="18"
                           VerticalAlignment="Center"/>
                    <PasswordBox x:Name="PasswordBox" Width="150" Height="30" Margin="90,0,0,0"/>
                </StackPanel>

                <Border Width="120" Height="40" Grid.Row="7" HorizontalAlignment="Center" VerticalAlignment="Top"
                        CornerRadius="5" Background="#FF290A0A">
                    <Button x:Name="LoginButton" Content="Login" FontSize="20" FontWeight="Bold"
                            Click="LoginButton_Click" IsDefault="True" Background="Transparent" Foreground="White"
                            BorderThickness="0"/>
                </Border>
                <TextBlock x:Name="ErrorDB" Grid.Row="7" VerticalAlignment="Bottom" HorizontalAlignment="Center" Text="" Foreground="Red" FontSize="16" Margin="0 0 0 15"/>
            </Grid>
        </Border>
    </Grid>
        

</Window>
